{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
    <div class="container mt-4">
        <!-- Section Date -->
        <div class="row mb-4 justify-content-center">
            <div class="col-md-8">
                <div class="card text-white bg-primary mb-3 text-center shadow">
                    <div class="card-body">
                        <h5 class="card-title">Date Actuelle</h5>
                        <p class="card-text" id="currentTime" style="font-size: 1.5em; font-weight: bold;">
                            <!-- Le contenu de cette div sera remplacé par le script JavaScript -->
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sections Emails Gmail et Posts LinkedIn -->
        <div class="row mb-4">
            <!-- Section Calandar Gmail -->
            <div class="col-md-6">
                {% include 'calendar/events.html.twig' %}
            </div>

            <!-- Section Posts LinkedIn -->
            <div class="col-md-6">
                {% include 'linkedin/posts.html.twig' %}





            </div>
        </div>

        <!-- Vous pouvez continuer à ajouter d'autres sections en deux colonnes ici... -->

    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('JS/dateTime.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    {#    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>#}
    <!-- ... Autres scripts JS si nécessaire ... -->
{% endblock %}
